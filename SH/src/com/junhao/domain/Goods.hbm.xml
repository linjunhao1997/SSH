<?xml version="1.0" encoding="UTF-8"?>    
<!DOCTYPE hibernate-mapping PUBLIC     
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">   
  
<hibernate-mapping package="com.junhao.domain">  
    <class name="com.junhao.domain.Goods" table="t_goods">  
        <id name="goodsid">  
        	
            <generator class="identity">
            	<param name="property">order</param>
            </generator>  
           
             <!--
             <generator class="native">
            </generator> 
              -->
        </id>  
        <property name="goodsname" length="50"></property>  
        <property name="price"></property>  
        <property name="quantity"></property>
        <property name="introduce" length="100"></property>
        <set name="goodsimages" cascade="save-update,delete">
        	<key column="gid"/>
        	<one-to-many class="com.junhao.domain.GoodsImage"/>
        </set>
        <one-to-one name="order"></one-to-one>
      
    </class>  
</hibernate-mapping>  
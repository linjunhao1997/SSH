<?xml version="1.0" encoding="UTF-8"?>    
<!DOCTYPE hibernate-mapping PUBLIC     
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">   
  
<hibernate-mapping package="com.junhao.domain">  
    <class name="com.junhao.domain.Order" table="t_order">  
        <id name="id">  
            <generator class="native"></generator>  
        </id>  
        <property name="userid"></property>
        <property name="address" length="50"></property> 
       
        <property name="quantity"></property>
        <property name="price"></property>  
        <property name="state"></property>  
        <many-to-one name="goods" class="com.junhao.domain.Goods" fetch="select" lazy="false" column="goodsid"></many-to-one>
        <many-to-one name="user" class="com.junhao.domain.User" fetch="select" lazy="false" column="uid"/>
    </class>  
</hibernate-mapping> 